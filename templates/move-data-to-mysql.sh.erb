echo "/usr/local/openvpn_as/scripts/dbcvt -t user_prop -s sqlite:////usr/local/openvpn_as/etc/db/userprop.db -d 'mysql://${MYSQL_USER}:${MYSQL_PASS}@${MYSQL_HOST}/as_userprop'"
